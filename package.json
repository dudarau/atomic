{
  "name": "@utilitycss/atomic",
  "version": "0.2.10",
  "author": "Andrea Moretti (@axyz) <axyzxp@gmail.com>",
  "description": "Atomic CSS composition for yarn workspaces",
  "repository": "utilitycss/atomic",
  "license": "MIT",
  "main": "dist",
  "bin": {
    "atomic": "index.js"
  },
  "scripts": {
    "prepublish": "npm run build-ts",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@utilitycss/utility": "^0.2.6",
    "chalk": "^2.3.2",
    "chokidar": "^2.0.4",
    "commander": "^2.15.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "handlebars": "^4.1.2",
    "inquirer": "^6.3.1",
    "mkdirp-promise": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-combine-duplicated-selectors": "^7.0.0",
    "postcss-discard-duplicates": "^2.1.0",
    "postcss-discard-empty": "^2.1.0",
    "postcss-for": "^2.1.1",
    "postcss-modules": "^1.4.1",
    "postcss-nested": "^3.0.0",
    "postcss-simple-vars": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/handlebars": "^4.1.0",
    "@types/inquirer": "^6.0.2",
    "@types/mkdirp-promise": "^5.0.0",
    "husky": "^2.2.0",
    "jest": "^24.0.0",
    "prettier": "^1.17.1",
    "lint-staged": "^8.1.6",
    "ts-jest": "^24.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --no-config --write",
        "git add"
      ],
      "*.ts": [
        "prettier --no-config --write",
        "tslint -c tslint.json -p tsconfig.json --fix",
        "git add"
      ]
    }
  }
}
